{
	"name": "hono-starter",
	"version": "0.1.0",
	"scripts": {
		"start": "bun src/server.js",
		"dev": "bun --watch src/server.ts",
		"type-check": "tsc --noEmit",
		"code-check": "biome check",
		"code-fix": "biome check --write",
		"lint-check": "biome lint",
		"generate-jwt-secret": "bun utils/generate-jwt-secret.ts",
		"show-routes": "bun utils/show-routes.ts",
		"migrate-latest": "bun utils/migrate-latest.ts && kysely-codegen --dialect postgres",
		"migrate-down": "bun utils/migrate-down.ts && kysely-codegen --dialect postgres",
		"install-git-hooks": "lefthook install"
	},
	"dependencies": {
		"hono": "4.6.3",
		"kysely": "0.27.4",
		"pg": "8.13.0",
		"zod": "3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@types/bun": "1.1.10",
		"@types/pg": "8.11.10",
		"kysely-codegen": "0.16.8",
		"lefthook": "1.7.18",
		"typescript": "5.6.2"
	}
}
